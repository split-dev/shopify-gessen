<div class="container">
  <div class="row">
    {% for single_product in section.settings.collection.products %}
      <div class="col-12 col-md-6 col-lg-4 col-xl-3">
        {% render 'card-product' card_product:single_product %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collection.presets.name"
    }
  ]
}
{% endschema %}
